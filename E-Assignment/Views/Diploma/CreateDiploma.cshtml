@model Diploma
@{
    ViewBag.Title = "Create Diploma";
}

<h1 class="mb-3" style="text-align:center"> @ViewBag.Title</h1>
<form asp-controller="Diploma" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card mb-4 shadow-sm">
                <svg class="bd-placeholder-img card-img-top" width="100%" height="50" xmlns="http://www.w3.org/2000/svg" role="img" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"></rect></svg>
                <div class="card-body">
                    <div class="mb-1">
                        <label asp-for="Title"></label>
                        <input class="form-control" asp-for="@Model.Title" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="mb-1" id="inputList">
                        <label asp-for="Teachers"></label>
                        <input class="form-control" asp-for="Teachers[0].Name" value="@ViewBag.UserName" readonly />
                        <a class="btn btn-outline-secondary mt-2" id="addInput" title="Add teacher"><img src="/images/add-icon.png" /></a>
                        <span asp-validation-for="Teachers[0].Name" class="text-danger"></span>
                    </div>
                    <div class="mb-1">
                        <label asp-for="StudentName"></label>
                        <input class="form-control" asp-for="@Model.StudentName" />
                        <span asp-validation-for="StudentName" class="text-danger"></span>
                    </div>
                    <div class="mb-1">
                        <label asp-for="Description"></label>
                        <textarea class="form-control" rows="3" asp-for="@Model.Description"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mt-3">
                        <div class="btn-group">
                            <button type="submit" class="btn btn-sm btn-outline-secondary">Create</button>
                            <a asp-action="ShowDiplomas" class="btn btn-sm btn-outline-secondary">Cancel</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            var j = 1;
            $("#addInput").click(function () {
                $("#inputList").append('<div class="mt-2"><input class="form-control" id="Teachers_' + j + '__Name" name="Teachers[' + j + '].Name"><a class="btn btn-outline-secondary mt-1" id="deleteInput" title="Delete teacher"><img src="/images/remove-icon.png" /></a></div>');
                j++;
            });
            $('#inputList').on('click', "#deleteInput", function () {
                $(this).parent('div').remove();
                j = j - 1;

            });

        });
    </script>
}