@{
    ViewBag.Title = "View Diploma";
}

<h1>@ViewBag.ErrorMessage</h1>
@model E_Assignment.ViewModels.DiplomaViewModel

<form enctype="multipart/form-data" asp-controller="Diploma" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="card mt-3">
        <div class="card-header">
            <label hidden>@Model.Id</label>
            <input hidden class="form-control" asp-for="Teachers" value="@Model.Teachers" />
            <input hidden class="form-control" asp-for="Status" value="@Model.Status" />
            <div class="form-group col-md-6">
                <label asp-for="Title"></label>
                <input class="form-control" asp-for="Title" value="@Model.Title" readonly/>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
        </div>
        <div class="card-body">
            <div class="form-group col-md-6">
                <label asp-for="StudentName"></label>
                <input class="form-control" asp-for="StudentName" value="@Model.StudentName" readonly/>
                <span asp-validation-for="StudentName" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Description"></label>
                <textarea class="form-control" rows="3" asp-for="Description" readonly>@Model.Description</textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="File"></label>
                <input asp-for="File" class="form-control-file" />
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-dark">Upload</button>
            <a asp-action="ShowDiplomasStudents" class="btn btn-dark">Cancel</a>
        </div>
    </div>
</form>
